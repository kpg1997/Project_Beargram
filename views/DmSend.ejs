<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>대화방</title>
    <link rel='stylesheet' href='/stylesheets/DmSend.css' />
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
</head>
<body>
    <div id="header">
        <header id="include-header"></header>
    </div>
    <div class="panel">
        <div class="empty"></div>
        <div class="Dm-panel">
            <div class="show-Dm-summary">
                <input type="hidden" value="<%=session%>" id="userSession">
                <div id="gramDmNo" style="display: none;"><%=gramDmNo%></div>
                <%if(comment==undefined){%>
                    <div></div>
                <%}else{%>
                    <div class="list-ul-div">
                        <ul id="list-ul">
                            <%comment.forEach((item,index)=>{%>
                                <% 
                                    let date=new Date(item.commentTime);
                                    let fdate=date.getFullYear() + '년'+(date.getMonth() + 1) + '월' + date.getDate() + '일'+"    "+date.getHours()+':'+date.getMinutes()
                                %>
                                <li>
                                    <%if(item.userImageUrl!=null){%>
                                        <span class='userImage'><img src='/images/<%=item.userId%>/<%=item.userImageUrl%>' alt=''></span>
                                    <%}else{%>
                                        <%if(item.gender==1){%>
                                            <span class='userImage'>
                                                <img src='/images/men.png' alt=''>
                                            </span>
                                        <%}else{%>
                                            <span class='userImage'>
                                                <img src='/images/girl.png' alt=''>
                                            </span>
                                        <%}%>
                                    <%}%>
                                    <span class="dmuserId"><%=item.dmuserId%></span>
                                    <span class='comment'><p><%=item.comment%></p></span>
                                    <span class='time'><%=fdate%></span>
                                </li>
                            <%})%>
                        </ul>
                    </div>
                <%}%>
            </div>
            <div class="send-Dm">
                <!-- <form method="post" name="DmSendForm"> -->
                    <input type="text" name="comment" id="comment" value="" maxlength="500" autocomplete="off">
                    <button id="send-Dm-comment">전송</button>
                <!-- </form> -->
            </div>
        </div>
        <div class="empty"></div>
    </div>
    <script src="/javascripts/DmSend.js"></script>
</body>
</html>