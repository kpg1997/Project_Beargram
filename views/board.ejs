<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=loginUser%>의 게시글 목록
    </title>
    <link rel='stylesheet' href='/stylesheets/Boardstyle.css' />
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
</head>

<body>
    <div id="header">
        <header id="include-header"></header>
    </div>
    <div class="board-panel">
        <div class="empty"></div>
        <div class="board-list">
            <div class="myProfile">
                <div class="myImg-profile">
                    <%if(myProfile.userImageUrl!=null){%>
                        <div class="userImage">
                            <img src="/images/<%=myProfile.userId%>/<%=myProfile.userImageUrl%>"
                                alt="">
                        </div>
                    <%}else{%>
                        <%if(myProfile.gender==1){%>
                            <div class="userImage">
                                    <img src="/images/men.png" alt="">
                            </div>
                        <%}else{%>
                            <div class="userImage">
                                <img src="/images/girl.png" alt="">
                            </div>
                        <%}%>
                    <%}%>
                    <div class="user-Information">
                        <div>
                            <%=myProfile.userName%>(<div id="userId" style="color: gray; display: inline-block;"><%=myProfile.userId%></div>)
                        </div>
                        <div>
                            <%
                                var date = new Date(myProfile.userBirthday);
                                var fdate = date.getFullYear() + '년' + (date.getMonth() + 1) + '월' + date.getDate() + '일'
                            %>
                            Birthday : <%=fdate%>
                        </div>
                        <div class="follower-text">팔로워 : <div id="follower-su"></div></div>
                        <div class="follow-text">팔로우 : <div id="follow-su"></div></div><br>
                   </div>
                </div>
            </div>
            <% data.forEach((item,index)=>{%>
                <%
                var date = new Date(item.gramDate);
                var fdate = date.getFullYear() + '년' + (date.getMonth() + 1) + '월' + date.getDate() + '일'
                %>
                <div class="board">
                    <a href="/mainBoard/detailBoard/<%=item.gramNo%>">
                    <%if(item.gramImageUrl==null){%>
                        <div class="import">
                                <div class="impot-contents"><%=item.gramContents%></div>
                        </div>
                        <%}else{%>
                            <div class="import">
                                    <img class="dbimg"src='/images/<%=item.userId%>/<%=item.gramImageUrl%>' alt="">
                            </div>
                            <%}%>
                    <div class="writeDay">
                        <%=fdate%>
                    </div>
                    </a>
                </div>
                <%})%>
        </div>
        <div class="empty"></div>
    </div>
    <div class="BoardPage">
        <a href="/mainBoard/makeBoard">
            <img src="/images/plus.png" alt="" srcset="">
        </a>
    </div>
    <div class="GoTop">
        <a href="#header">
            <img src="/images/upArrow.png" alt="">
        </a>
    </div>
    <script src="/javascripts/Board.js"></script>
</body>

</html>