<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=searchMid%> : <%=search%> 검색 결과
    </title>
    <link rel='stylesheet' href='/stylesheets/findboard.css' />
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
</head>

<body>
    <div id="header">
        <header id="include-header"></header>
    </div>


    <div class="panel">
        <div class="empty"></div>
        <div class="findBoard-panel">
            <div class="search-result"><%=searchMid%> : <%=search%> 검색 결과</div>
            <% data.forEach((item,index)=>{%>
                <%  
                    var date=new Date(item.gramDate);item.gramDate;
                    var fdate=date.getFullYear() + '년' + (date.getMonth() + 1) + '월' + date.getDate() + '일';
                %>
                <div class="findBoard-list">
                   
                        <div class="findBoard-writer-panel">
                            <div class="user-information">
                                <a href="/users/findUser/<%=item.userId%>">
                                    <%if(item.userImageUrl!=null){%>
                                        <div class="findBoard-writer-img">
                                            <img src="/images/<%=item.userId%>/<%=item.userImageUrl%>" alt="">
                                        </div>
                                    <%}else{%>
                                        <%if(item.gener==1){%>
                                            <div class="findBoard-writer-img"><img src="/images/men.png" alt=""></div>
                                        <%}else{%>
                                            <div class="findBoard-writer-img"><img src="/images/girl.png" alt=""></div>
                                        <%}%>
                                    <%}%>
                                        <div class="findBoard-writer-Name"><%=item.userName%></div>
                                </a>
                            </div>    
                            <div class="findBoard-date"><%=fdate%></div>
                        </div>
                    <a href="/mainBoard/detailBoard/<%=item.gramNo%>">
                        <div class="findBoard-writer-border-panel">
                            <% if(item.gramImageUrl !=null ){%>
                                <div class="gramImgDiv"><img src="/images/<%=item.userId%>/<%=item.gramImageUrl%>" alt=""></div>
                            <%}else{%>
                                <div class="contents"><%=item.gramContents%></div>
                            <%}%>
                        </div>
                    </a>
                </div>
            <%})%>
        </div>
        <div class="empty"></div>
    </div>
    <div class="GoTop">
        <a href="#header">
            <img src="/images/upArrow.png" alt="">
        </a>
    </div>
    <script src="/javascripts/findboard.js"></script>
</body>

</html>