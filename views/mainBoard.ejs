<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/stylesheets/mainBoard.css">
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <title>BearGram</title>
</head>

<body>
    <div class="header-div" id="header">
        <header id="include-header"></header>
    </div>
    <div class="panel">
        <div class="empty"></div>
        <div class="follower-board">
            <%if(data[0]==undefined){%>
                <%}else{%>
                    <%data.forEach((item,index)=>{%>
                        <div class="follow-write-board">
                            <div class="follow-write-pri">
                                <div class="follow-user-pri">
                                        <div class="follow-wirte-img">
                                            <a href="/users/findUser/<%=item.userId%>">
                                                <%if(item.userImageUrl!=null){%>
                                                    <div class="userImage">
                                                        <img src="/images/<%=item.userId%>/<%=item.userImageUrl%>"
                                                            alt="">
                                                    </div>
                                                    <%}else{%>
                                                        <%if(item.gender==1){%>
                                                            <div class="userImage">
                                                                <img src="/images/men.png" alt="">
                                                            </div>
                                                            <%}else{%>
                                                                <div class="userImage">
                                                                    <img src="/images/girl.png" alt="">
                                                                </div>
                                                                <%}%>
                                                                    <%}%>

                                            <div class="userIdAnduserName">
                                                <div class="userId"><%=item.userId%></div>
                                                <div class="userName">(<%=item.userName%>)</div>
                                            </div>
                                            </a>
                                        </div>
                                </div>
                                <div class="follow-write-date-panel">
                                    <% 
                                        var date=new Date(item.gramDate);
                                        var fdate=date.getFullYear() + '년'+(date.getMonth() + 1) + '월' + date.getDate() + '일'
                                    %>
                                        <div class="follow-write-date">
                                            <%=fdate%>
                                        </div>
                                </div>
                            </div>
                            <div class="follow-write-board-panel">
                                <div class="follow-write-board-imageDiv">
                                    <a href="/mainBoard/detailBoard/<%=item.gramNo%>">
                                    <%if(item.gramImageUrl==null){%>
                                        <div class="gramContent"><%=item.gramContents%></div>
                                    <%}else{%>
                                        <img src="/images/<%=item.userId%>/<%=item.gramImageUrl%>" alt="">
                                    <%}%>
                                    </a>
                                </div>
                            </div>
                            <div class="likeBtn">
                               
                            </div>
                        </div>
                        <%})%>
                    <%}%>
        </div>
        <div class="empty"></div>
    </div>
    <div class="BoardPage">
        <a href="/mainBoard/makeBoard">
            <img src="/images/plus.png" alt="" srcset="">
        </a>
    </div>
    <div class="GoTop">
        <a href="#header">
            <img src="/images/upArrow.png" alt="">
        </a>
    </div>
    <script src="/javascripts/mainBoard.js"></script>
</body>

</html>